<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定了一个对应的Dao/Mapper接口-->
<mapper namespace="top.mores.ufresh.DAO.UserDao">

    <select id="getUserPassword" resultType="top.mores.ufresh.POJO.User">
        select password from user where user_name = #{userName}
    </select>

    <insert id="addUser">
        insert into user values (user_name,password,register_time),
        ( #{userName},#{password},#{registerTime})
    </insert>

    <select id="checkUser" resultMap="top.mores.ufresh.POJO.User">
        select user_name from user where user_name = #{userName}
    </select>
</mapper>
